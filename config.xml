<?xml version='1.0' encoding='utf-8'?>
<widget id="de.a-hanak.particle-web-client" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Particle Web Client</name>
    <description>
        This application lists devices in the particle cloud and can access their functions, variables and events.
    </description>
    <author href="https://www.a-hanak.de">
        Andr√© Hanak
    </author>

    <preference name="phonegap-version" value="cli-6.5.0" />

    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="https://api.particle.io" />

    <preference name="permissions" value="none"/>
</widget>
